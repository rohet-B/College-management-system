<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Send Material</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h3 class="text-center mb-4">ðŸ“¤ Send Study Material</h3>
    <form action="/teacher/send/materials/<%= teacherID %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="subject" class="form-label">Select Subject</label>
        <select class="form-select" name="subject" required>
          <% subjects.forEach(function(sub) { %>
            <option value="<%= sub %>"><%= sub %></option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">
        <label for="file" class="form-label">Choose PDF/PPT file</label>
        <input type="file" name="material" accept=".pdf,.ppt,.pptx,.doc,.docx" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Send to Students</button>
    </form>
  </div>
</body>
</html>
