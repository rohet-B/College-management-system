<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Students</h2>
        <a href="/admin/students/new" class="btn btn-primary">+ Add New Student</a>
    </div>

    <p class="text-muted">Total Students: <strong><%= students.length %></strong></p>

    <!-- Filters -->
    <form method="GET" action="/admin/students" class="row g-3 mb-4">
        <div class="col-md-6">
            <label for="courseFilter" class="form-label">Filter by Course:</label>
            <select name="course" id="courseFilter" class="form-select" onchange="this.form.submit()">
                <!-- In HTML, the selected keyword in a <option> tag tells the browser: -->
                <!-- "This is the currently selected option in the dropdown." -->
                <option value="All" <%= selectedCourse === "All" ? "selected" : "" %>>All Courses</option>
                <% courses.forEach(course => { %>
                    <option value="<%= course %>" <%= selectedCourse === course ? "selected" : "" %>><%= course %></option>
                <% }) %>
            </select>
        </div>
        <div class="col-md-6">
            <label for="semesterFilter" class="form-label">Filter by Semester:</label>
            <select name="semester" id="semesterFilter" class="form-select" onchange="this.form.submit()">
                <option value="All" <%= selectedSemester === "All" ? "selected" : "" %>>All Semesters</option>
                <% semesters.forEach(sem => { %>
                    <option value="<%= sem %>" <%= selectedSemester === sem ? "selected" : "" %>><%= sem %></option>
                <% }) %>
            </select>
        </div>
    </form>

    <!-- Student Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>SN</th>
            <th>Full Name</th>
            <th>Username</th>
            <th>ID</th>
            <th>Course</th>
            <th>Year</th>
            <th>Semester</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>REMOVE</th>
        </tr>
        </thead>
        <tbody>
        <% students.forEach((student, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= student.Full_name %></td>
                <td><%= student.user_name %></td>
                <td><%= student.studentID %></td>
                <td><%= student.course %></td>
                <td><%= student.Year %></td>
                <td><%= student.semester %></td>
                <td><%= student.gender %></td>
                <td><%= student.dob %></td>
                <td>
                    <form action="/admin/students/<%= student.studentID %>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">DEL</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
