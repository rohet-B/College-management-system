<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Teachers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Teachers</h2>
        <a href="/admin/teachers/new" class="btn btn-primary">+ Add New Teacher</a>
    </div>

    <p class="text-muted">Total Teachers: <strong><%= teachers.length %></strong></p>

    <!-- Filters -->
    <form method="GET" action="/admin/teachers" class="row g-3 mb-4">
        <div class="col-md-6">
            <label for="departmentFilter" class="form-label">Filter by Department:</label>
            <select name="department" id="departmentFilter" class="form-select" onchange="this.form.submit()">
                <option value="All" <%= selectedDepartment === "All" ? "selected" : "" %>>All Departments</option>
                <% departments.forEach(dep => { %>
                    <option value="<%= dep %>" <%= selectedDepartment === dep ? "selected" : "" %>><%= dep %></option>
                <% }) %>
            </select>
        </div>
        <div class="col-md-6">
            <label for="courseFilter" class="form-label">Filter by Course:</label>
            <select name="course" id="courseFilter" class="form-select" onchange="this.form.submit()">
                <option value="All" <%= selectedCourse === "All" ? "selected" : "" %>>All Courses</option>
                <% courses.forEach(course => { %>
                    <option value="<%= course %>" <%= selectedCourse === course ? "selected" : "" %>><%= course %></option>
                <% }) %>
            </select>
        </div>
    </form>

    <!-- Teachers Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>SN</th>
            <th>Full Name</th>
            <th>Username</th>
            <th>Teacher ID</th>
            <th>Department</th>
            <th>Experience</th>
            <th>Subjects Assigned</th>
            <th>Joining Date</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Remove</th>
        </tr>
        </thead>
        <tbody>
        <% teachers.forEach((teacher, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= teacher.Full_name %></td>
                <td><%= teacher.username %></td>
                <td><%= teacher.teacherID %></td>
                <td><%= teacher.department %></td>
                <td><%= teacher.years_of_experience %> yrs</td>
                <td>
                    <% teacher.subjects_assigned.forEach(sub => { %>
                        <div><%= sub.name %> (<%= sub.course %>)</div>
                    <% }) %>
                </td>
                <td><%= teacher.joining_date %></td>
                <td><%= teacher.dob %></td>
                <td><%= teacher.gender %></td>
                <td><%= teacher.status %></td>
                <td>
                    <form action="/admin/teachers/<%= teacher.teacherID %>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this teacher?')">DEL</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
