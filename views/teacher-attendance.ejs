<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendance Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .btn-status {
      width: 28px; height: 28px;
      border-radius: 50%; padding: 0;
    }
    .count-circle {
      width: 40px; height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      background-color: #fff;
      border: 1px solid #ccc;
    }
    .attendance-col {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    .badge-subject {
      background-color: #f0f0f0;
      padding: 4px 8px;
      border-radius: 5px;
      font-size: 0.9rem;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="mb-4 text-center">üìã Attendance Register</h2>

    <!-- Subject Selector (from teacher's assigned subjects) -->
    <div class="mb-4">
      <label for="subjectSelector" class="form-label">Select Subject:</label>
      <select id="subjectSelector" class="form-select">
        <option disabled selected>Select a subject</option>
        <% teacher.subjects_assigned.forEach(sub => { %>
          <option value="<%= sub.name %>"><%= sub.name %></option>
        <% }) %>
      </select>
    </div>

    <!-- Attendance Form -->
    <form action="/teacher/attendance/save/<%= teacherID %>" method="POST" id="attendanceForm">
      <input type="hidden" name="subject" id="selectedSubjectHidden">

      <div class="table-responsive">
        <table class="table table-bordered align-middle shadow-sm">
          <thead class="table-dark">
            <tr>
              <th>Student Name</th>
              <th>ID</th>
              <th>Subject</th>
              <th class="text-success">‚úÖ Present</th>
              <th class="text-danger">‚ùå Absent</th>
              <th class="text-warning">üèñ Holiday</th>
            </tr>
          </thead>
          <tbody id="attendanceBody"></tbody>
        </table>
      </div>

      <div class="text-center mt-4 d-flex justify-content-center gap-3">
        <a href="/teacher/dashboard/<%= teacherID %>" class="btn btn-secondary px-4 py-2">Back to Dashboard</a>
        <button type="submit" class="btn btn-primary px-4 py-2" id="saveBtn" disabled>Save Attendance</button>
      </div>
    </form>
  </div>

  <!-- Hidden serialized students and teacher data -->
  <div id="studentsData" data-students='<%= JSON.stringify(students).replace(/'/g, "&apos;") %>' hidden></div>
  <div id="teacherData" data-teacher='<%= JSON.stringify(teacher).replace(/'/g, "&apos;") %>' hidden></div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const studentsData = JSON.parse(document.getElementById("studentsData").dataset.students.replace(/&apos;/g, "'"));
      const subjectSelector = document.getElementById('subjectSelector');
      const attendanceBody = document.getElementById('attendanceBody');
      const subjectHidden = document.getElementById('selectedSubjectHidden');
      const saveBtn = document.getElementById('saveBtn');
      const heading = document.querySelector('h2');

      subjectSelector.addEventListener('change', () => {
        const selectedSubject = subjectSelector.value;
        subjectHidden.value = selectedSubject;
        attendanceBody.innerHTML = '';
        heading.textContent = `üìã Attendance Register - ${selectedSubject}`;
        saveBtn.disabled = false;

        let found = false;

        studentsData.forEach(student => {
          const subjectData = student.subjects_with_assessments.find(s => s.subject === selectedSubject);
          if (subjectData) {
            found = true;
            const sid = student.studentID;
            const row = document.createElement('tr');

            row.innerHTML = `
              <td>${student.Full_name}</td>
              <td>${sid}</td>
              <td><span class="badge-subject">${selectedSubject}</span></td>
              ${['present', 'absent', 'holiday'].map(type => {
                const value = subjectData.attendance[type] || 0;
                return `
                  <td>
                    <div class="attendance-col">
                      <button type="button" class="btn btn-sm btn-outline-secondary" onclick="update('${sid}', '${selectedSubject}', '${type}', -1)">
                        <i class="bi bi-caret-left-fill"></i>
                      </button>
                      <div id="${sid}-${selectedSubject}-${type}" class="count-circle">${value}</div>
                      <button type="button" class="btn btn-sm btn-outline-secondary" onclick="update('${sid}', '${selectedSubject}', '${type}', 1)">
                        <i class="bi bi-caret-right-fill"></i>
                      </button>
                    </div>
                    <input type="hidden" name="attendance[${sid}][${type}]" id="input-${sid}-${selectedSubject}-${type}" value="${value}">
                  </td>
                `;
              }).join('')}
            `;
            attendanceBody.appendChild(row);
          }
        });

        if (!found) {
          attendanceBody.innerHTML = `<tr><td colspan="6" class="text-center text-muted">No students found for this subject.</td></tr>`;
        }
      });
    });

    function update(studentID, subject, type, change) {
      const display = document.getElementById(`${studentID}-${subject}-${type}`);
      const input = document.getElementById(`input-${studentID}-${subject}-${type}`);
      let current = parseInt(display.textContent);
      let newValue = current + change;
      if (newValue >= 0) {
        display.textContent = newValue;
        input.value = newValue;
      }
    }
  </script>
</body>
</html>
