<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendance Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .btn-status {
      width: 28px; height: 28px;
      border-radius: 50%; padding: 0;
    }
    .count-circle {
      width: 40px; height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      background-color: #fff;
      border: 1px solid #ccc;
    }
    .attendance-col {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    .badge-subject {
      background-color: #f0f0f0;
      padding: 4px 8px;
      border-radius: 5px;
      font-size: 0.9rem;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="mb-4 text-center">üìã Attendance Register</h2>

    <!-- Subject Selector -->
    <div class="mb-4">
      <label for="subjectSelector" class="form-label">Select Subject:</label>
      <select id="subjectSelector" class="form-select">
        <option disabled selected>Select a subject</option>
        <% 
          let subjectsSet = new Set(); 
          students.forEach(s => {
            s.subjects_with_assessments.forEach(subj => subjectsSet.add(subj.subject));
          });
          [...subjectsSet].forEach(subject => { %>
            <option value="<%= subject %>"><%= subject %></option>
        <% }); %>
      </select>
    </div>

    <!-- Attendance Form -->
    <form action="/teacher/attendance/save/<%= teacherID %>" method="POST" id="attendanceForm">
      <input type="hidden" name="subject" id="selectedSubjectHidden">

      <div class="table-responsive">
        <table class="table table-bordered align-middle shadow-sm">
          <thead class="table-dark">
            <tr>
              <th>Student Name</th>
              <th>ID</th>
              <th>Subject</th>
              <th class="text-success">‚úÖ Present</th>
              <th class="text-danger">‚ùå Absent</th>
              <th class="text-warning">üèñ Holiday</th>
            </tr>
          </thead>
          <tbody id="attendanceBody"></tbody>
        </table>
      </div>

      <!-- Button Row -->
      <div class="text-center mt-4 d-flex justify-content-center gap-3">
        <a href="/teacher/dashboard/<%= teacherID %>" class="btn btn-secondary px-4 py-2">Back to Dashboard</a>
        <button type="submit" class="btn btn-primary px-4 py-2">Save Attendance</button>
      </div>
    </form>
  </div>

  <!-- Hidden serialized students data -->
  <div id="studentsData" data-students='<%= JSON.stringify(students).replace(/'/g, "&apos;") %>' hidden></div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const studentsData = document.getElementById("studentsData").dataset.students.replace(/&apos;/g, "'");
      const students = JSON.parse(studentsData);

      const attendanceBody = document.getElementById('attendanceBody');
      const subjectSelector = document.getElementById('subjectSelector');
      const subjectHidden = document.getElementById('selectedSubjectHidden');

      subjectSelector.addEventListener('change', () => {
        const selectedSubject = subjectSelector.value;
        subjectHidden.value = selectedSubject;
        attendanceBody.innerHTML = '';

        students.forEach(student => {
          const subjectData = student.subjects_with_assessments.find(s => s.subject === selectedSubject);
          if (subjectData) {
            const row = document.createElement('tr');
            const sid = student.studentID;

            row.innerHTML = `
              <td>${student.Full_name}</td>
              <td>${sid}</td>
              <td><span class="badge-subject">${selectedSubject}</span></td>
              ${['present', 'absent', 'holiday'].map(type => `
                <td>
                  <div class="attendance-col">
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="update('${sid}', '${selectedSubject}', '${type}', -1)">
                      <i class="bi bi-caret-left-fill"></i>
                    </button>
                    <div id="${sid}-${selectedSubject}-${type}" class="count-circle">${subjectData.attendance[type]}</div>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="update('${sid}', '${selectedSubject}', '${type}', 1)">
                      <i class="bi bi-caret-right-fill"></i>
                    </button>
                  </div>
                  <input type="hidden" name="attendance[${sid}][${type}]" id="input-${sid}-${type}" value="${subjectData.attendance[type]}">
                </td>
              `).join('')}
            `;
            attendanceBody.appendChild(row);
          }
        });
      });
    });

    function update(studentID, subject, type, change) {
      const display = document.getElementById(`${studentID}-${subject}-${type}`);
      const input = document.getElementById(`input-${studentID}-${type}`);
      let current = parseInt(display.textContent);
      let newValue = current + change;
      if (newValue >= 0) {
        display.textContent = newValue;
        input.value = newValue;
      }
    }
  </script>

</body>
</html>